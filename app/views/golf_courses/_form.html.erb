    <%= form.label :area, "エリア", style: "display: block" %>
    <%= form.text_field :area %>
  </div>

  <div style="margin-bottom: 10px;">
    <%= form.label :description, "特徴", style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div style="margin-bottom: 10px;">
    <%= form.label :image_url, "画像URL", style: "display: block" %>
    <%= form.text_field :image_url %>
  </div>

  <div style="margin-bottom: 10px;">
    <%= form.label :official_url, "公式サイトURL", style: "display: block" %>
    <%= form.text_field :official_url %>
  </div>

