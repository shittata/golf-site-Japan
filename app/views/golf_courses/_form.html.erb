<%= form_with(model: golf_course) do |form| %>
  <% if golf_course.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(golf_course.errors.count, "error") %> prohibited this golf_course from being saved:</h2>
      <ul>
        <% golf_course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
